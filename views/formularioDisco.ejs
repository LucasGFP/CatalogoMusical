<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Disco</title>
</head>
<body>
  <h1>Adicionar Disco</h1>
  <form action="/discos/novo" method="POST" enctype="multipart/form-data">
    <label for="titulo">Título:</label>
    <input type="text" id="titulo" name="titulo" required>
    <br>
    <label for="anoLancamento">Ano de Lançamento:</label>
    <input type="number" id="anoLancamento" name="anoLancamento" required>
    <br>
    <label for="capa">Capa (Imagem):</label>
    <input type="file" id="capa" name="capa">
    <br>
    <label for="faixas">Faixas:</label>
    <div id="faixas-container">
      <input type="text" name="faixas[0][titulo]" placeholder="Título da Faixa" required>
      <input type="text" name="faixas[0][duracao]" placeholder="Duração (Ex: 3:45)">
    </div>
    <button type="button" onclick="addFaixa()">Adicionar Faixa</button>
    <br><br>
    <button type="submit">Salvar</button>
  </form>

  <script>
    let faixaIndex = 1;
    function addFaixa() {
      const container = document.getElementById('faixas-container');
      const novaFaixa = document.createElement('div');
      novaFaixa.innerHTML = `
        <input type="text" name="faixas[${faixaIndex}][titulo]" placeholder="Título da Faixa" required>
        <input type="text" name="faixas[${faixaIndex}][duracao]" placeholder="Duração (Ex: 3:45)">
      `;
      container.appendChild(novaFaixa);
      faixaIndex++;
    }
  </script>
</body>
</html>
