<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Discos</title>
</head>
<body>
  <h1>Lista de Discos</h1>
  <ul>
    <% discos.forEach(disco => { %>
      <li>
        <h2><%= disco.titulo %> (<%= disco.anoLancamento %>)</h2>
        <% if (disco.capa) { %>
          <img src="<%= disco.capa %>" alt="Capa de <%= disco.titulo %>" style="max-width: 200px;">
        <% } %>
        <h3>Faixas:</h3>
        <ul>
          <% disco.faixas.forEach(faixa => { %>
            <li><%= faixa.titulo %> - <%= faixa.duracao %></li>
          <% }) %>
        </ul>
      </li>
    <% }) %>
  </ul>
  <a href="/discos/novo">Adicionar Novo Disco</a>
</body>
</html>
